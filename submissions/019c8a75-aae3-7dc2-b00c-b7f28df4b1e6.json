{
  "bindings": [
    {
      "from": "#green.a2a",
      "to": "#gateway.green"
    },
    {
      "from": "#pro_debater.a2a",
      "to": "#gateway.purple1"
    },
    {
      "from": "#con_debater.a2a",
      "to": "#gateway.purple2"
    },
    {
      "from": "#gateway.proxy",
      "name": "green-proxy",
      "to": "#green.proxy",
      "weak": true
    }
  ],
  "components": {
    "con_debater": {
      "config": {
        "openai_api_key": "${config.openai_api_key}"
      },
      "manifest": "https://raw.githubusercontent.com/staverm/amber-runner/refs/heads/main/examples/debate-proxy/debater.json5"
    },
    "gateway": {
      "config": {
        "assessment_config": {
          "num_rounds": 1,
          "topic": "AI should be regulated."
        },
        "callback_urls": {
          "green": "${bindings.green-proxy.url}"
        },
        "participant_roles": {
          "green": "debate_judge",
          "purple1": "pro_debater",
          "purple2": "con_debater"
        }
      },
      "manifest": "https://raw.githubusercontent.com/staverm/amber-runner/refs/heads/main/examples/debate-proxy/gateway.json5"
    },
    "green": {
      "config": {
        "google_api_key": "${config.google_api_key}"
      },
      "manifest": "https://raw.githubusercontent.com/staverm/amber-runner/refs/heads/main/examples/debate-proxy/debate-judge.json5"
    },
    "pro_debater": {
      "config": {
        "openai_api_key": "${config.openai_api_key}"
      },
      "manifest": "https://raw.githubusercontent.com/staverm/amber-runner/refs/heads/main/examples/debate-proxy/debater.json5"
    }
  },
  "config_schema": {
    "additionalProperties": false,
    "properties": {
      "google_api_key": {
        "secret": true,
        "type": "string"
      },
      "openai_api_key": {
        "secret": true,
        "type": "string"
      }
    },
    "required": [
      "openai_api_key",
      "google_api_key"
    ],
    "type": "object"
  },
  "exports": {
    "results": "#gateway.results"
  },
  "manifest_version": "0.1.0",
  "metadata": {
    "agentbeats_ids": {
      "con_debater": 8910,
      "debate_judge": 1234,
      "pro_debater": 567
    }
  }
}